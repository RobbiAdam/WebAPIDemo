@model Car


<h3>Car</h3>
<br />

<form method="post" asp-action="UpdateCar">
    <input type="hidden" asp-for="CarId" />
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="CarBrand" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="CarBrand" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="CarBrand"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="CarName" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="CarName" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="CarName"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="CarSeat" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="CarSeat" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="CarSeat"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="CarType" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="CarType" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="CarType"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="CarColor" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="CarColor" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="CarColor"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="CarPrice" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="CarPrice" class="form-control" min="1000" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="CarPrice"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
        <div class="col-6">
        </div>
    </div>
</form>


